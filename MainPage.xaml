<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AudioCopilot.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#E6F3FF"
             NavigationPage.HasNavigationBar="False"
             >

    <ScrollView>
        <Frame 
               BackgroundColor="White"
               Opacity="0.9"
                InputTransparent="True"
               CornerRadius="25"
               HasShadow="True">

            <VerticalStackLayout Spacing="2" Padding="5">
                <!-- Portada del álbum -->
                <HorizontalStackLayout Spacing="20" Padding="10">
                    <Frame BackgroundColor="#FFE9F1"
                           CornerRadius="15"
                           HeightRequest="75"
                           WidthRequest="75"
                           HorizontalOptions="Center"
                           HasShadow="False">       
                        <Image Source="album_placeholder.png"
                           Aspect="AspectFill"/>
                    </Frame>

                    <!-- Información de la canción -->
                    <VerticalStackLayout Spacing="4" 
                   HorizontalOptions="Start">
                        <Label Text="Nombre de la canción"
           FontSize="24"
           FontAttributes="Bold"
           TextColor="#7C5C6C"
           HorizontalOptions="Center"/>
                        <Label Text="Artista"
           FontSize="18"
           TextColor="#9B7B8B"
           HorizontalOptions="Start"/>
                    </VerticalStackLayout>

                </HorizontalStackLayout>
                

                <!-- Barra de progreso -->
                <Grid ColumnDefinitions="Auto,*,Auto"
                      RowDefinitions="Auto,Auto"
                      Margin="0,10">
                    <Label Text="0:00"
                           Grid.Column="0"
                           Grid.Row="1"
                           TextColor="#9B7B8B"
                           FontSize="12"/>
                    <Frame Grid.Column="0"
                           Grid.ColumnSpan="3"
                           Grid.Row="0"
                           BackgroundColor="#FFE9F1"
                           Padding="0"
                           HeightRequest="4"
                           CornerRadius="2">
                        <Frame BackgroundColor="#FF9EC2"
                               HorizontalOptions="Start"
                               WidthRequest="100"
                               Margin="0"
                               Padding="0"
                               CornerRadius="2"/>
                    </Frame>
                    <Label Text="3:30"
                           Grid.Column="2"
                           Grid.Row="1"
                           TextColor="#9B7B8B"
                           FontSize="12"/>
                </Grid>

                <!-- Controles de reproducción -->
                <HorizontalStackLayout Spacing="25"
                                     HorizontalOptions="Center">
                    <Button Text="⏮"
                            BackgroundColor="#FFC2D1"
                            TextColor="#7C5C6C"
                            CornerRadius="25"
                            HeightRequest="50"
                            WidthRequest="50"
                            Clicked="OnPreviousClicked"/>
                    <Button Text="⏯"
                            BackgroundColor="#FF9EC2"
                            TextColor="#7C5C6C"
                            CornerRadius="30"
                            HeightRequest="60"
                            WidthRequest="60"
                            FontSize="24"
                            Clicked="OnPlayPauseClicked"/>
                    <Button Text="⏭"
                            BackgroundColor="#FFC2D1"
                            TextColor="#7C5C6C"
                            CornerRadius="25"
                            HeightRequest="50"
                            WidthRequest="50"
                            Clicked="OnNextClicked"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </ScrollView>
</ContentPage>